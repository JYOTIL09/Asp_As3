@model System.Text.Json.Nodes.JsonArray

<div>
    <h1>Welcome to Quiz</h1>
    <ul>
        @foreach (var topicNode in Model)
        {
            var topicObj = topicNode?.AsObject();
            if (topicObj != null)
            {
                <li>
                    <a asp-controller="App" asp-action="Quiz" asp-route-quiz_topic="@topicObj["title"]?.ToString()"
                       asp-route-topic_id="@topicObj["id"]?.ToString()"> @topicObj["title"]?.ToString() </a>
                </li>
            }
        }
    </ul>
</div>